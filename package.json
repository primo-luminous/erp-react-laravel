{
  "name": "erp-react-laravel",
  "version": "1.0.0",
  "description": "Modern ERP System built with React, Laravel, and Docker",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/primo-luminous/erp-react-laravel.git"
  },
  "keywords": [
    "erp",
    "react",
    "laravel",
    "docker",
    "typescript",
    "tailwindcss"
  ],
  "author": "ERP Team",
  "license": "MIT",
  "scripts": {
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "docker:up": "docker compose --profile dev up -d --build",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs --tail 50",
    "docker:status": "docker compose ps",
    "dev": "docker compose --profile dev up -d --build",
    "build": "docker compose build",
    "clean": "docker compose down -v --remove-orphans"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "semantic-release": "^24.0.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "develop",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}