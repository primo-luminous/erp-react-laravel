{
  "name": "erp-fix-scripts",
  "version": "1.0.0",
  "description": "Scripts to automatically fix warnings and errors in ERP project",
  "scripts": {
    "start": "node start-project.js",
    "start:win": "powershell -ExecutionPolicy Bypass -File start-project.ps1",
    "start:unix": "bash start-project.sh",
    "dev": "npm run start",
    "release": "semantic-release",
    "fix": "node fix-warnings.js",
    "fix:win": "powershell -ExecutionPolicy Bypass -File fix-warnings.ps1",
    "fix:unix": "bash fix-warnings.sh",
    "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npx eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "format": "npx prettier --write '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "type-check": "npx tsc --noEmit",
    "clean": "rm -rf apps/web/dist apps/web/node_modules/.vite apps/api/vendor apps/api/bootstrap/cache",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs --tail 50",
    "docker:status": "docker compose ps",
    "docker:stop": "docker compose down",
    "docker:build": "docker compose --profile dev up -d --build"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "erp",
    "fix",
    "warnings",
    "errors",
    "automation"
  ],
  "author": "ERP Team",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "country-flag-icons": "^1.5.21"
  }
}
